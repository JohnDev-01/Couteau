<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea6_Couteau.Views.ContainerViews.AcercaDeMi"
             BackgroundColor="#191919">
    <VerticalStackLayout Padding="30"
                         Spacing="20"
                         VerticalOptions="Center">
        <!-- Foto de Perfil -->
        <Frame Padding="0"
               BackgroundColor="Transparent"
               CornerRadius="100"
               HorizontalOptions="Center">
            <Image x:Name="ProfileImage"
                   WidthRequest="150"
                   HeightRequest="150"
                   Aspect="AspectFill" />
        </Frame>
        <!-- Nombre -->
        <Label Text="John Kerlin Silvestre"
               FontSize="26"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />
        <!-- Descripción -->
        <!--<Label Text="Soy un desarrollador especializado en .NET MAUI, Angular, NestJS y tecnologías modernas. Estoy disponible para nuevos proyectos y colaboraciones."
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="Gray"
               Padding="10"
               HorizontalTextAlignment="Center" />-->
        <!-- Datos de Contacto -->
        <Frame BackgroundColor="#222"
               Padding="15"
               CornerRadius="15">
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout>
                    <Image Source="email.png"
                           WidthRequest="20"
                           HeightRequest="20" />
                    <Label Text="Email: johnkerlin52@gmail.com"
                           TextColor="White"
                           FontSize="16" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Image Source="phone.png"
                           WidthRequest="20"
                           HeightRequest="20" />
                    <Label Text="Teléfono: +1 809-606-3232"
                           TextColor="White"
                           FontSize="16" />
                </HorizontalStackLayout>
               
            </VerticalStackLayout>
        </Frame>
        <!-- Botón para visitar portafolio -->
        <Button Text="Visitar mi Portafolio"
                FontSize="18"
                BackgroundColor="#03A9F4"
                TextColor="White"
                Clicked="OnVisitPortfolioClicked" />
    </VerticalStackLayout>
</ContentPage>