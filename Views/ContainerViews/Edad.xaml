<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea6_Couteau.Views.ContainerViews.Edad"
             BackgroundColor="#191919">
    <VerticalStackLayout Padding="30"
                         Spacing="20">
        <Label Text="PredicciÃ³n de Edad"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />
        <Entry x:Name="NameEntry"
               Placeholder="Ingrese un nombre"
               FontSize="18"
               TextColor="White"
               BackgroundColor="#333"
               PlaceholderColor="Gray"
               HorizontalOptions="Fill" />
        <Button Text="Predecir Edad"
                FontSize="18"
                BackgroundColor="#6200EA"
                TextColor="White"
                Clicked="OnPredictAgeClicked" />
        <Label x:Name="ResultLabel"
               Text="Esperando resultado..."
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="White" />
        <Image x:Name="PersonImage"
               WidthRequest="150"
               HeightRequest="150"
               HorizontalOptions="Center"
               IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>