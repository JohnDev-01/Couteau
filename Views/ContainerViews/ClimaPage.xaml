<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea6_Couteau.Views.ContainerViews.ClimaPage"
             BackgroundColor="#191919">
    <VerticalStackLayout Padding="30"
                         Spacing="20">
        <Label Text="Clima en RepÃºblica Dominicana"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />
        <Label x:Name="DateLabel"
               FontSize="18"
               TextColor="Gray"
               HorizontalOptions="Center" />
        <Image x:Name="WeatherIcon"
               Source="clima.png"
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center" />
        <Label x:Name="TemperatureLabel"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="White" />
        <Label x:Name="DescriptionLabel"
               FontSize="20"
               HorizontalOptions="Center"
               TextColor="White" />
        <Button Text="Actualizar Clima"
                FontSize="18"
                BackgroundColor="#6200EA"
                TextColor="White"
                Clicked="OnGetWeatherClicked" />
    </VerticalStackLayout>
</ContentPage>